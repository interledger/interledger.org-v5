{
  "kind": "collectionType",
  "collectionName": "foundation_blog_posts",
  "info": {
    "singularName": "foundation-blog-post",
    "pluralName": "foundation-blog-posts",
    "displayName": "Foundation Blog Post",
    "description": "Foundation blog posts (grants, policy, announcements) with distinct styling from Tech Blog"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 255,
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "description": {
      "type": "text",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "date": {
      "type": "date",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "content": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": { "preset": "defaultMarkdown" },
      "pluginOptions": { "i18n": { "localized": true } }
    }
  }
}
