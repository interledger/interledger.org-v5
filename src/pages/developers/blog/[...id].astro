---
import { getCollection, render } from 'astro:content'
import CommunityLinks from '../../../components/blog/CommunityLinks.astro'
import TechBlogLayout from '../../../layouts/TechBlogLayout.astro'

export const prerender = true

export async function getStaticPaths() {
  const blogEntries = await getCollection('engineering-blog')
  return blogEntries.map((entry) => ({
    params: { id: entry.id },
    props: { entry }
  }))
}

const { entry } = Astro.props
const { Content } = await render(entry)
---

<TechBlogLayout frontmatter={entry.data}>
  <Content />
  <CommunityLinks />
</TechBlogLayout>
