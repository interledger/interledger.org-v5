---
interface Card {
  title: string
  description?: string
  link?: string
  linkText?: string
  icon?: string
  openInNewTab?: boolean
}

interface Props {
  heading?: string
  subheading?: string
  cards: Card[]
  columns?: '2' | '3' | '4'
}

const { heading, subheading, cards, columns = '3' } = Astro.props

const gridClass =
  columns === '2'
    ? 'grid-cols-[repeat(auto-fit,minmax(280px,1fr))]'
    : columns === '4'
      ? 'grid-cols-[repeat(auto-fit,minmax(220px,1fr))]'
      : 'grid-cols-[repeat(auto-fit,minmax(250px,1fr))]'
---

<div class="max-w-wide mx-auto">
  {
    heading && (
      <div class="text-center mb-space-l">
        <h2 class="text-[2rem] font-semibold text-primary-fallback mb-space-xs">
          {heading}
        </h2>
        {subheading && (
          <p class="text-[1.125rem] text-gray max-w-[600px] mx-auto">
            {subheading}
          </p>
        )}
      </div>
    )
  }
  <div class={`grid gap-space-l mx-auto ${gridClass}`}>
    {
      cards.map((card) => (
        <article class="rounded-card border border-gray-200 bg-white p-space-l text-black shadow-[0_2px_10px_rgba(0,0,0,0.08)] transition-shadow duration-200 hover:shadow-card">
          {card.icon && (
            <div class="w-12 h-12 mb-space-s" set:html={card.icon} />
          )}
          <h3 class="text-[1.5rem] font-normal leading-snug mb-space-xs text-black">
            {card.title}
          </h3>
          {card.description && (
            <p class="text-gray leading-normal mb-space-s">
              {card.description}
            </p>
          )}
          {card.link && (
            <a
              href={card.link}
              class="text-primary-fallback no-underline font-medium hover:underline"
              {...(card.openInNewTab
                ? { target: '_blank', rel: 'noopener noreferrer' }
                : {})}
            >
              {card.linkText || 'Learn more'} &rarr;
            </a>
          )}
        </article>
      ))
    }
  </div>
</div>
