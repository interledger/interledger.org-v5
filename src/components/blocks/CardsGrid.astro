---
interface Card {
  title: string
  description?: string
  link?: string
  linkText?: string
  icon?: string
  openInNewTab?: boolean
}

interface Props {
  heading?: string
  subheading?: string
  cards: Card[]
  columns?: '2' | '3' | '4'
}

const { heading, subheading, cards, columns = '3' } = Astro.props

const gridClass =
  columns === '2'
    ? 'grid-cols-[repeat(auto-fit,minmax(280px,1fr))]'
    : columns === '4'
      ? 'grid-cols-[repeat(auto-fit,minmax(220px,1fr))]'
      : 'grid-cols-[repeat(auto-fit,minmax(250px,1fr))]'
---

<div class="max-w-wide mx-auto">
  {
    heading && (
      <div class="text-center mb-space-l">
        <h2 class="text-[2rem] font-semibold text-primary-fallback mb-space-xs">
          {heading}
        </h2>
        {subheading && (
          <p class="text-[1.125rem] text-gray max-w-[600px] mx-auto">
            {subheading}
          </p>
        )}
      </div>
    )
  }
  <div class={`grid gap-space-m ${gridClass}`}>
    {
      cards.map((card) => (
        <article class="card">
          {card.icon && (
            <div class="w-12 h-12 mb-space-s" set:html={card.icon} />
          )}
          <h3 class="text-[1.25rem] font-semibold mb-space-xs text-primary-fallback">
            {card.title}
          </h3>
          {card.description && (
            <p class="text-gray leading-normal mb-space-s">{card.description}</p>
          )}
          {card.link && (
            <a
              href={card.link}
              class="text-primary-fallback no-underline font-medium hover:underline"
              {...(card.openInNewTab
                ? { target: '_blank', rel: 'noopener noreferrer' }
                : {})}
            >
              {card.linkText || 'Learn more'} &rarr;
            </a>
          )}
        </article>
      ))
    }
  </div>
</div>

<style>

  @reference "../../styles/tailwind.css";
  .card {
    @apply bg-white rounded-card p-space-m border border-gray-200 transition-shadow duration-200;
  }

  .card:hover {
    @apply shadow-card;
  }
</style>
