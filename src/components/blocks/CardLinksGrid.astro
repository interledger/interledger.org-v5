---
interface CardLink {
  title: string
  description?: string
  href: string
  openInNewTab?: boolean
}

interface Props {
  heading?: string
  subheading?: string
  cards: CardLink[]
  columns?: '2' | '3' | '4'
}

const { heading, subheading, cards, columns = '3' } = Astro.props

const gridClass =
  columns === '2'
    ? 'grid-cols-[repeat(auto-fit,minmax(280px,1fr))]'
    : columns === '4'
      ? 'grid-cols-[repeat(auto-fit,minmax(220px,1fr))]'
      : 'grid-cols-[repeat(auto-fit,minmax(250px,1fr))]'
---

<div class="max-w-wide mx-auto">
  {
    heading && (
      <div class="text-center mb-space-l">
        <h2 class="text-[2rem] font-semibold text-primary-fallback mb-space-xs">
          {heading}
        </h2>
        {subheading && (
          <p class="text-[1.125rem] text-gray max-w-[600px] mx-auto">
            {subheading}
          </p>
        )}
      </div>
    )
  }
  <div class={`grid gap-space-m ${gridClass}`}>
    {
      cards.map((card) => (
        <a
          href={card.href}
          class="card-link"
          {...(card.openInNewTab
            ? { target: '_blank', rel: 'noopener noreferrer' }
            : {})}
        >
          <span class="flex flex-col gap-space-2xs">
            <span class="text-[1.125rem] font-semibold text-primary-fallback">
              {card.title}
            </span>
            {card.description && (
              <span class="text-sm text-gray">{card.description}</span>
            )}
          </span>
          <span class="card-link__arrow">&rarr;</span>
        </a>
      ))
    }
  </div>
</div>

<style>

  @reference "../../styles/tailwind.css";
  .card-link {
    @apply flex items-center justify-between bg-white rounded-card p-space-m border border-gray-200 no-underline text-inherit transition-all duration-200;
  }

  .card-link:hover {
    @apply shadow-card;
    border-color: var(--color-primary);
  }

  .card-link__arrow {
    @apply text-2xl text-primary-fallback transition-transform duration-200;
  }

  .card-link:hover .card-link__arrow {
    @apply translate-x-1;
  }
</style>
