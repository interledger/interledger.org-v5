---
import MarkdownIt from 'markdown-it'

interface Props {
  content: string
  alignment?: 'left' | 'center' | 'right'
}

const { content, alignment = 'left' } = Astro.props

// Convert markdown to HTML
const md = new MarkdownIt({
  html: true,
  linkify: true,
  typographer: true
})
const htmlContent = md.render(content || '')

const alignmentClass =
  alignment === 'center'
    ? 'text-center'
    : alignment === 'right'
      ? 'text-right'
      : ''
---

{/* :where(a) keeps specificity low so styled components (e.g. CtaButton)
    can override these prose defaults with their own Tailwind classes */}
<div
  data-prose
  class={`mx-auto max-w-narrow ${alignmentClass}`}
  set:html={htmlContent}
/>
