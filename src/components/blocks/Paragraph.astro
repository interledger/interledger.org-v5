---
import MarkdownIt from 'markdown-it'

interface Props {
  content: string
  alignment?: 'left' | 'center' | 'right'
}

const { content, alignment = 'left' } = Astro.props

// Convert markdown to HTML
const md = new MarkdownIt({
  html: true,
  linkify: true,
  typographer: true
})
const htmlContent = md.render(content || '')

const alignmentClass =
  alignment === 'center'
    ? 'text-center'
    : alignment === 'right'
      ? 'text-right'
      : ''
---

<div
  class={`paragraph max-w-narrow mx-auto ${alignmentClass}`}
  set:html={htmlContent}
/>

<style>

  @reference "../../styles/tailwind.css";
  .paragraph :global(p) {
    @apply mb-space-s leading-relaxed;
  }

  .paragraph :global(a) {
    color: var(--color-primary);
    @apply underline;
  }

  .paragraph :global(a:hover) {
    @apply no-underline;
  }

  .paragraph :global(h2) {
    @apply text-[1.75rem] font-semibold my-space-l mb-space-s;
    color: var(--color-primary);
  }

  .paragraph :global(h3) {
    @apply text-[1.25rem] font-semibold my-space-m mb-space-xs;
  }

  .paragraph :global(ul),
  .paragraph :global(ol) {
    @apply mb-space-s ps-space-m;
  }

  .paragraph :global(li) {
    @apply mb-space-xs;
  }
</style>
