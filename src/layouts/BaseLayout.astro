---
import FoundationFooter from '../components/pages/FoundationFooter.astro'
import FoundationHeader from '../components/pages/FoundationHeader.astro'
import SeoHead from '../components/SeoHead.astro'
import '../styles/tailwind.css'
import { resolveLang } from '../utils/seo'

interface Props {
  title: string
  description?: string
  gradient?: string
  ogType?: string
  ogImageUrl?: string
  ogImageAlt?: string
  canonicalURL?: string
  lang?: string
  alternates?: { href: string; hreflang: string }[]
  robots?: string
}

const {
  title,
  description,
  ogType,
  ogImageUrl,
  ogImageAlt,
  canonicalURL,
  lang,
  alternates,
  robots
} = Astro.props

const pageLang = resolveLang(lang, Astro.url.pathname)
---

<!doctype html>
<html lang={pageLang} data-theme="light">
  <head>
    <SeoHead
      title={title}
      description={description}
      siteName="Interledger Foundation"
      ogType={ogType}
      ogImageUrl={ogImageUrl}
      ogImageAlt={ogImageAlt}
      canonicalURL={canonicalURL}
      lang={pageLang}
      alternates={alternates}
      robots={robots}
    />
    <slot name="head" />
    <script
      defer
      src="https://uwa.interledger.org/script.js"
      data-website-id="50d81dd1-bd02-4f82-8a55-34a09ccbbbd9"
      data-domains="interledger.org"></script>
  </head>

  <body class="flex flex-col min-h-full min-w-[360px] font-titillium overflow-x-clip before:content-[''] before:fixed before:inset-0 before:-z-10 before:bg-[url('/img/bg-swirl.svg')] before:bg-repeat before:bg-[length:150%] before:blur-[150px] before:opacity-25 before:transform-gpu max-[430px]:before:hidden">
    <FoundationHeader />
    <slot />
    <FoundationFooter />
  </body>
</html>
