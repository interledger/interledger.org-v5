---
import BaseLayout from './BaseLayout.astro'

const { frontmatter } = Astro.props

const dateObj = new Date(frontmatter.date)
const isoDate = dateObj.toISOString().slice(0, 10)
const longDate = dateObj.toDateString().substring(4)

const rawHTMLString = `This article was originally published at <a href=${frontmatter.external_url}>${frontmatter.external_url}</a>.`
---

<BaseLayout
  title={frontmatter.title}
  description={frontmatter.description}
  ogType="article"
  ogImageUrl={frontmatter.ogImageUrl
    ? new URL(frontmatter.ogImageUrl, Astro.site).href
    : new URL('/img/blog/og-image.png', Astro.site).href}
>
  <main class="flex flex-col bg-white/70 pt-space-m pb-space-xl">
    <article
      itemscope
      itemtype="http://schema.org/Article"
      class="content-wrapper flex-1"
      style="--max-content-width: 960px"
    >
      <ol
        class="breadcrumbs flex list-none ps-0 text-step--1 font-bold pt-space-l"
        itemscope
        itemtype="https://schema.org/BreadcrumbList"
      >
        <li
          itemprop="itemListElement"
          itemscope
          itemtype="https://schema.org/ListItem"
        >
          <a itemprop="item" href="/" data-umami-event="Devs breadcrumb - Home">
            <span itemprop="name">Developers Portal</span></a
          >
          <meta itemprop="position" content="1" />
        </li>
        <li
          itemprop="itemListElement"
          itemscope
          itemtype="https://schema.org/ListItem"
          class="before:content-['>'] before:inline-flex before:ms-space-3xs"
        >
          <a
            itemprop="item"
            href="/blog"
            data-umami-event="Devs breadcrumb - Blog"
          >
            <span itemprop="name">Engineering Blog</span></a
          >
          <meta itemprop="position" content="2" />
          {
            frontmatter.lang && (
              <>
                <span>|</span>
                <a
                  itemprop="item"
                  href="/blog/es"
                  data-umami-event="Devs breadcrumb - ES blogs"
                >
                  <span itemprop="name">Blog de Ingenier√≠a</span>
                </a>
              </>
            )
          }
        </li>
      </ol>
      <h1 class="text-primary-fallback text-step-4 leading-tight mb-space-2xs">
        {frontmatter.title}
      </h1>
      <time datetime={isoDate} itemprop="datePublished" class="block mb-space-3xs text-step--1">
        {longDate}
      </time>
      {
        frontmatter.external_url ? (
          <div class="note" set:html={rawHTMLString} />
        ) : (
          ''
        )
      }
      <slot />
    </article>
  </main>
</BaseLayout>

<style>

  @reference "../styles/tailwind.css";
  .note {
    @apply px-space-xs py-space-xs shadow rounded italic mb-space-s text-step--1 max-w-max relative;
  }

  .note::before {
    @apply absolute w-full h-full top-0 left-0 -z-10 rounded;
    background-color: var(--color-primary);
    opacity: 0.25;
    content: '';
  }

  /* Article content styling for markdown - requires :global() */
  article :global(p),
  article :global(ol),
  article :global(ul),
  article :global(figure),
  article :global(hr) {
    @apply mb-space-s;
  }

  article :global(h2),
  article :global(h3),
  article :global(h4) {
    @apply mb-space-xs;
  }

  article :global(a) {
    color: var(--color-primary);
    @apply no-underline;
  }

  article :global(a:hover) {
    @apply underline;
  }

  article :global(figcaption) {
    @apply text-step--1 italic;
  }

  article :global(table) {
    @apply table w-full border-collapse rounded shadow mb-space-m;
  }

  article :global(th) {
    @apply text-left;
  }

  article :global(th),
  article :global(td) {
    @apply py-space-3xs px-space-2xs;
  }

  article :global(thead tr:first-of-type th:first-of-type) {
    @apply rounded-ss;
  }

  article :global(thead tr:first-of-type th:last-of-type) {
    @apply rounded-se;
  }

  article :global(thead tr) {
    background-color: var(--color-table-stripe);
  }

  article :global(thead + tbody tr:nth-child(2n)) {
    background-color: var(--color-table-stripe);
  }

  article :global(tbody tr:first-of-type th:first-child),
  article :global(tbody tr:first-of-type td:first-child) {
    @apply rounded-ss;
  }

  article :global(tbody tr:first-of-type th:last-child),
  article :global(tbody tr:first-of-type td:last-child) {
    @apply rounded-se;
  }

  article :global(tbody tr:last-of-type th:first-child),
  article :global(tbody tr:last-of-type td:first-child) {
    @apply rounded-es;
  }

  article :global(tbody tr:last-of-type th:last-child),
  article :global(tbody tr:last-of-type td:last-child) {
    @apply rounded-ee;
  }

  article :global(.expressive-code) {
    @apply mb-space-s;
  }

  article :global(:not(pre) > code) {
    background-color: var(--color-bg-inline-code);
    @apply rounded text-step--1;
    padding: 0.125rem 0.375rem;
    overflow-wrap: anywhere;
  }

  article :global(ul li) {
    @apply mb-space-2xs;
  }

  article :global(img) {
    @apply block mx-auto;
  }
</style>
