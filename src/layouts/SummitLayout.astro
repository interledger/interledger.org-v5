---
import SummitFooter from '../components/pages/SummitFooter.astro'
import SummitHeader from '../components/pages/SummitHeader.astro'
import SeoHead from '../components/SeoHead.astro'
import '../styles/tailwind.css'
import { resolveLang } from '../utils/seo'

interface Props {
  title: string
  description?: string
  gradient?: string
  ogType?: string
  ogImageUrl?: string
  ogImageAlt?: string
  canonicalURL?: string
  lang?: string
  alternates?: { href: string; hreflang: string }[]
  robots?: string
}

const {
  title,
  description,
  gradient = 'option1',
  ogType,
  ogImageUrl,
  ogImageAlt,
  canonicalURL,
  lang,
  alternates,
  robots
} = Astro.props

const pageLang = resolveLang(lang, Astro.url.pathname)
---

<!doctype html>
<html lang={pageLang} data-theme="dark">
  <head>
    <SeoHead
      title={title}
      description={description}
      siteName="Interledger Summit"
      ogType={ogType}
      ogImageUrl={ogImageUrl}
      ogImageAlt={ogImageAlt}
      canonicalURL={canonicalURL}
      lang={pageLang}
      alternates={alternates}
      jsonLdSiteName="Interledger Summit"
      robots={robots}
    />
    <slot name="head" />
    <script
      defer
      src="https://uwa.interledger.org/script.js"
      data-website-id="50d81dd1-bd02-4f82-8a55-34a09ccbbbd9"
      data-domains="interledger.org"></script>
  </head>

  <body
    class="flex min-h-full min-w-[360px] flex-col overflow-x-hidden bg-fixed bg-no-repeat font-titillium text-step-0 text-white"
    style={`--gradient:var(--${gradient}); background-image: var(--gradient);`}
  >
    <SummitHeader />
    <div class="flex-1 text-step-0 [&>section]:w-full [&>section]:py-space-m [&_h1]:text-step-4 [&_h2]:text-step-2 [&_h3]:text-step-1 [&_h4]:text-step-0 [&_a]:text-current [&_a]:transition-colors [&_a]:duration-slow [&_a:hover]:text-[hsla(26,100%,76%,1)]">
      <slot />
    </div>
    <SummitFooter />
  </body>
</html>
